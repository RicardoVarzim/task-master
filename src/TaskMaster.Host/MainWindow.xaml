<Window x:Class="TaskMaster.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskMaster.Host"
        mc:Ignorable="d"
        Title="Task Master - Host" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Task Master" FontSize="24" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Gerenciamento de Serviços" FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Services Status -->
        <StackPanel Grid.Row="1">
            <!-- API Status -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="API Service" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="http://localhost:5000" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="ApiStatusIndicator" Width="12" Height="12" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock x:Name="ApiStatusText" Text="Stopped" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Worker Status -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Worker Service" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="File monitoring service" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="WorkerStatusIndicator" Width="12" Height="12" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock x:Name="WorkerStatusText" Text="Stopped" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Blazor Status -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Blazor Server" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="http://localhost:5001" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="BlazorStatusIndicator" Width="12" Height="12" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock x:Name="BlazorStatusText" Text="Stopped" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="StartButton" Content="Iniciar Todos" Padding="20,10" Margin="0,0,10,0" 
                    Click="StartButton_Click" FontSize="14"/>
            <Button x:Name="StopButton" Content="Parar Todos" Padding="20,10" 
                    Click="StopButton_Click" FontSize="14" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
