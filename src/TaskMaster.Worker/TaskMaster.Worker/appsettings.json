{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "TaskMaster.Worker": "Information"
    }
  },
  "WorkerService": {
    "ApiBaseUrl": "http://localhost:5000",
    "ApiTimeoutSeconds": 30,
    "DebounceDelayMs": 500,
    "ProjectCheckIntervalMinutes": 1,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "TaskFilePattern": "*.md",
    "TasksFolderName": ".tasks",
    "IncludeSubdirectories": true,
    "MaxConcurrentSyncs": 5,
    "EnableDetailedFileLogging": false
  }
}
