        return Priority switch
        {
            TaskPriority.Maximum => "bg-danger",
            TaskPriority.High => "bg-warning",
            TaskPriority.Medium => "bg-info",
            TaskPriority.Low => "bg-secondary",
            TaskPriority.Strategic => "bg-primary",
