@using TaskMaster.Core.Models
@using TaskStatusModel = TaskMaster.Core.Models.TaskStatus

<span class="badge @GetStatusClass()">@GetStatusText()</span>

@code {
    [Parameter]
    public TaskStatusModel Status { get; set; }

    private string GetStatusClass()
    {
        return Status switch
        {
            TaskStatusModel.Completed => "bg-success",
            TaskStatusModel.InProgress => "bg-primary",
            TaskStatusModel.Planned => "bg-info",
            TaskStatusModel.Blocked => "bg-danger",
            TaskStatusModel.Pending => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText()
    {
        return Status switch
        {
            TaskStatusModel.Completed => "Completed",
            TaskStatusModel.InProgress => "In Progress",
            TaskStatusModel.Planned => "Planned",
            TaskStatusModel.Blocked => "Blocked",
            TaskStatusModel.Pending => "Pending",
            _ => Status.ToString()
        };
    }
}

